<p id="notice"><%= notice %></p>
<div class="center">
    <h3>Discover items you can't find anywhere else</h3>
<div class="row">
<% @listings.each do |listing| %>
  <div class="col-md-3">
     <div class="thumbnail">
  
            <div class="caption">
            <h3><%= listing.name %></h3>
            <p><%= number_to_currency(listing.price) %></p>
            <%= link_to 'Show', listing, class:"btn btn-link" %>
          <%= link_to 'Edit', edit_listing_path(listing), class:"btn btn-link" %>
          <%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' },  class:"btn btn-link"%>
      </div>
    </div>
  </div>
<%end %>
</div>
</div>
<br>
<h3 align="center"><%= link_to 'More Editors Pick','/',  class:"btn btn-default"%></h3>
<%= link_to 'New Listing', new_listing_path,  class:"btn btn-link"%>
